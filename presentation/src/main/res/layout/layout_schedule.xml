<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="schedule"
            type="team.dahaeng.android.domain.community.model.Schedule" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/tv_period_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nanumbarungothic"
            android:text="@{schedule.period.to}"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12월 2일" />

        <TextView
            android:id="@+id/tv_period_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic"
            android:text=" ~ "
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_period_to"
            app:layout_constraintStart_toEndOf="@id/tv_period_to"
            app:layout_constraintTop_toTopOf="@+id/tv_period_to"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_period_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic"
            android:text="@{schedule.period.from}"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_period_to"
            app:layout_constraintStart_toEndOf="@id/tv_period_range"
            app:layout_constraintTop_toTopOf="@+id/tv_period_to"
            tools:text="12월 25일" />

        <TextView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/nanumbarungothic"
            android:text="@{schedule.title}"
            android:textColor="@color/black"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="제주 레포츠랜드" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_more_24"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="@+id/tv_period_from"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_period_from" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_participant_more"
            tools:itemCount="3"
            tools:listitem="@layout/layout_avatar" />

        <TextView
            android:id="@+id/tv_participant_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/rv_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rv_avatar"
            tools:text="+3" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>