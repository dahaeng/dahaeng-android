<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="post"
            type="team.dahaeng.android.domain.community.model.Post" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/browser_actions_bg_grey">

        <ImageView
            android:id="@+id/iv_travelphoto"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <LinearLayout

            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_travelphoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_travelphoto"
            app:layout_constraintTop_toTopOf="@+id/iv_travelphoto">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_post_title"
                style="@style/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="7"
                android:text="@{post.title}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/tv_expense"
                style="@style/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="end"
                android:text="@{post.expense}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textview_post_title" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_period"
            style="@style/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{post.period}"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="2"
            android:text="@{post.content}"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/iv_travelphoto"
            app:layout_constraintTop_toBottomOf="@+id/iv_travelphoto" />

        <TextView
            android:id="@+id/tv_tag_location"
            style="@style/tv_tag"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_baseline_tag_30"
            android:gravity="center"
            android:text="@{post.tagLocation}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_tag_theme"
            app:layout_constraintEnd_toStartOf="@+id/tv_tag_theme"
            app:layout_constraintTop_toTopOf="@+id/tv_tag_theme" />

        <TextView
            android:id="@+id/tv_tag_theme"
            style="@style/tv_tag"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_baseline_tag_30"
            android:gravity="center"
            android:text="@{post.tagTheme}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>