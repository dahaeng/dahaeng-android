<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="post"
            type="team.dahaeng.android.domain.community.model.Post" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_baseline_post">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_travelphoto"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/iv_round_border" />


        <TextView
            android:id="@+id/tv_post_title"
            style="@style/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="7"
            android:text="@{post.title}"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_travelphoto"
            app:layout_constraintTop_toTopOf="@+id/iv_travelphoto">

        </TextView>

        <TextView
            android:id="@+id/tv_tag_theme"
            style="@style/all_tag"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:text="@{post.tagTheme}"
            app:layout_constraintStart_toStartOf="@+id/tv_post_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_post_title" />

        <TextView
            android:id="@+id/tv_expense"
            style="@style/all_tag"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:text="@{post.expense}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_tag_theme"
            app:layout_constraintStart_toEndOf="@+id/tv_tag_theme"
            app:layout_constraintTop_toTopOf="@+id/tv_tag_theme" />

        <TextView
            android:id="@+id/tv_period"
            style="@style/all_tag"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:text="@{post.period}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_expense"
            app:layout_constraintStart_toEndOf="@+id/tv_expense"
            app:layout_constraintTop_toTopOf="@+id/tv_expense" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>