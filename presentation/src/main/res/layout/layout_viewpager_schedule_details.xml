<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="placePhotoUrlOrNull"
            type="java.lang.String" />

        <variable
            name="morePhotoCount"
            type="java.lang.Integer" />

        <variable
            name="place"
            type="team.dahaeng.android.domain.schedule.model.travel.PlaceWithInformation" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Dahaeng.WhiteScreen"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:contentPadding="16dp"
        tools:layout_margin="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/iv_round_corner"
                app:with_coil_small_or_gone="@{placePhotoUrlOrNull}"
                tools:src="@tools:sample/avatars" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_more_photo_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_round_radius_8"
                android:backgroundTint="@color/lightGray"
                android:fontFamily="@font/nanumbarungothic"
                android:padding="5dp"
                android:text="@{@string/item_recyclerview_schedule_photo_more_count(morePhotoCount)}"
                android:textColor="@color/gray"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_photo"
                app:layout_constraintEnd_toEndOf="@+id/iv_photo"
                tools:text="+5" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/fbl_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                app:alignItems="center"
                app:flexDirection="column"
                app:justifyContent="space_evenly"
                app:layout_constraintBottom_toBottomOf="@+id/iv_photo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_photo"
                app:layout_constraintTop_toTopOf="@+id/iv_photo">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothic"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="서울 치킨대학" />

                <team.dahaeng.android.ui.readmoretextview.ReadMoreTextView
                    android:id="@+id/tv_place_descrption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothic"
                    android:gravity="center"
                    android:maxLines="3"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    app:readMoreColor="@color/primary"
                    app:readMoreMaxLine="3"
                    tools:text="@tools:sample/lorem/random" />

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/nanumbarungothic"
                android:gravity="center"
                android:text="@{place.period.toString()}"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_round_date_range_24"
                app:drawableTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_photo"
                tools:text="2월 10일 ~ 5월 91일" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_accommodation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/nanumbarungothic"
                android:gravity="center"
                android:text="@string/layout_viewpager_schedule_details_accommodation"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_round_home_work_24"
                app:drawableTint="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_period" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_accommodation"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_accommodation" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>