<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bookmarked"
            type="java.lang.Boolean" />

        <variable
            name="schedule"
            type="team.dahaeng.android.domain.schedule.model.Schedule" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/white"
        tools:theme="@style/Theme.Dahaeng.WhiteScreen">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_round_arrow_back_ios_new_24"
            app:tint="@android:color/darker_gray" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_place_photos"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@tools:sample/avatars" />

        <me.relex.circleindicator.CircleIndicator2
            android:id="@+id/ci_place_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/vp_place_photos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/vp_place_photos" />

        <View
            android:id="@+id/view_bottom_fading_edge"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/bg_bottom_fading_edge"
            app:layout_constraintBottom_toBottomOf="@+id/vp_place_photos" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/iv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/nanumbarungothic"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@{schedule.publicTitle}"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vp_place_photos"
            tools:text="@tools:sample/lorem/random" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nanumbarungothic"
            android:maxLines="5"
            android:text="@{schedule.description}"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_title"
            tools:text="@tools:sample/lorem/random" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:background="@color/primary"
            app:contentPadding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearance="@style/iv_circle"
            app:srcCompat="@{bookmarked ? @drawable/ic_round_bookmark_24 : @drawable/ic_outline_bookmark_border_24"
            app:tint="@color/white"
            tools:srcCompat="@drawable/ic_outline_bookmark_border_24" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_fork"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/nanumbarungothic"
            android:text="@string/activity_schedule_view_fork"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_bookmark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_bookmark"
            app:layout_constraintTop_toTopOf="@+id/iv_bookmark" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>